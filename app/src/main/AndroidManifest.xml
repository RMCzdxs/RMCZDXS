<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rmc.mobileshop2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:name="com.rmc.mobileshop2.common.MobileShopApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_config"
        android:usesCleartextTraffic="true"
        >

        <activity android:name="com.rmc.mobileshop2.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.rmc.mobileshop2.activity.AdActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.MainActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.LoginActivity"/>

        <activity android:name="com.rmc.mobileshop2.activity.MyAddressActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.MyCollectActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.MyOrderActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.ChangePwdActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.GoodsListActivity"/>
        <activity android:name="com.rmc.mobileshop2.activity.GoodsDetailActivity"/>
    </application>

</manifest>